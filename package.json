{
    "name": "myo-fitness",
    "version": "1.0.0",
    "private": true,
    "description": "Myo Fitness - Frontend & Backend",
    "scripts": {
        "dev": "concurrently -n \"API,CLIENT\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:api\" \"npm run dev:client\"",
        "dev:api": "cd api && docker compose up -d && npm run start:dev",
        "dev:client": "cd client && npm run dev",
        "install:all": "npm install && cd api && npm install && cd ../client && npm install"
    },
    "devDependencies": {
        "concurrently": "^9.1.2"
    }
}